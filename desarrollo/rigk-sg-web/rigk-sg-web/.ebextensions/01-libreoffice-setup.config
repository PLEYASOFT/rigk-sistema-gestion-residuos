packages:
  yum:
    libXinerama.x86_64: []
    cups-libs: []
    dbus-glib: []
commands:
  01-download-libreoffice:
    command: wget https://www.libreoffice.org/donate/dl/rpm-x86_64/7.4.3/en-US/LibreOffice_7.4.3_Linux_x86-64_rpm.tar.gz
    cwd: /tmp
    test: "[ ! -f /tmp/LibreOffice_7.4.3_Linux_x86-64_rpm.tar.gz ]"
  02-untar:
    command: sudo tar -xvf LibreOffice_7.4.3_Linux_x86-64_rpm.tar.gz
    cwd: /tmp
    test: "[ ! -d /tmp/LibreOffice_7.4.3_Linux_x86-64_rpm ]"
  03-install:
    command: sudo yum localinstall *.rpm -y
    cwd: /tmp/LibreOffice_7.4.3_Linux_x86-64_rpm/RPMS
    test: "[ ! -d /opt/libreoffice7.4 ]"
